<h1><%= @list.name %></h1>
<div>
  <ul>
    <% @list.bookmarks.each do |book| %>
      <li><strong><%= book.movie.title %></strong></li>
      <br>
      <p><%= book.movie.overview %></p>
      <%= link_to "delete this bookmark", bookmark_path(book), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
    <% end %>
  </ul>
</div>
<div>
  <%= link_to "Create a new Bookmark", new_list_bookmark_path(@list) %>
</div>
<div>
  <%= link_to "Back to the list", lists_path %>
</div>
